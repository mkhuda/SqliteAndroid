<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textnama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Nama Anda"
        android:textColor="#37abc8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/garis"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@layout/underline" />

    <EditText
        android:id="@+id/namaAdd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/textpacar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Nama Pacar"
        android:textColor="#37abc8"
        android:textSize="15dp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/garisaddsatu"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@layout/underline" />

    <EditText
        android:id="@+id/pacarAdd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
    
    <TextView
        android:id="@+id/textalamat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Alamat Anda"
        android:textColor="#37abc8"
        android:textSize="15dp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/garisadddua"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@layout/underline" />

    <EditText
        android:id="@+id/alamatAdd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:id="@+id/saveAdd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Simpan" />

</LinearLayout>
</ScrollView>